<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Style de base pour l'application -->
    <style name="Theme.CookieCliker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:background">@color/cyan</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- Style pour les titres -->
    <style name="titre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">30dp</item>

        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">Open Sans</item>
    </style>


    <!-- Style pour les boutons -->
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">Open Sans</item>
        <item name="android:background">@color/orange</item>
    </style>


    <!-- Style pour les textes au-dessus EditText (form) -->
    <style name="formText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">Open Sans</item>
    </style>


    <!-- Style pour les formulaires -->
    <style name="edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">Open Sans</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- Style pour l'ImageView de l'avatar et/ou du cookie -->
    <style name="chooseImg">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <!-- Style pour le texte (username, email...) de la page Account Show -->
    <style name="accountShow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">30dp</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">Open Sans</item>
    </style>


    <!-- Style pour le background de la page account_show -->
    <!--<style name="accountShowBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.5</item>
    </style>-->


    <!-- Style pour le CookieCount -->
    <style name="cookieCount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>

        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">Open Sans</item>
    </style>


    <!-- Style pour le cookie -->
    <style name="cookie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_margin">30dp</item>
    </style>


    <!-- Syle pour le fragment (à partir de l'activité jeu) -->
    <style name="upgradesFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:name">com.example.myapplication.fragments.UpgradesFragment</item>
        <item name="android:visibility">gone</item>
        <item name="android:alpha">0.9</item>
    </style>


    <!-- Style pour le titre du fragment (Upgrades) -->
    <style name="upgradesTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>

        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- Style pour la croix (pour fermer le fragment) -->
    <style name="closeCross">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">top|right</item>

        <item name="android:src">@drawable/cross</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- Style pour le Switch Button (Cookie Booster lv. 1) -->
    <style name="switchButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginLeft">10dp</item>

        <item name="android:textSize">20sp</item>
        <item name="switchPadding">25dp</item>
    </style>


    <!-- Style pour les messages d'alerte -->
    <style name="alertMessage">
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">200dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>