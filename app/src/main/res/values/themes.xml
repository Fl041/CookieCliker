<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Style de base pour l'application -->
    <style name="Theme.CookieCliker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <!--<item name="colorOnPrimary">@color/red</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/red</item>-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/cyan</item>
    </style>


    <!-- Style pour les textes -->
    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">50dp</item>

        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">Open Sans</item>
    </style>


    <!-- Style pour les boutons -->
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">50dp</item>

        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">Open Sans</item>
        <item name="android:background">@color/orange</item>
    </style>


    <!-- Style pour les messages d'alerte -->
    <style name="alertMessage">
        <item name="color">@color/red</item>
    </style>
</resources>